<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pizza_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pizza_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaSteve"
        tools:targetApi="31">

        <!-- Login Activity (Launcher) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign Up Activity -->
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false" />

        <!-- Home Activity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false" />

        <!-- Category Activity (Pizza/Drinks/Starters) -->
        <activity
            android:name=".activities.CategoryActivity"
            android:exported="false" />

        <!-- Favorites Activity -->
        <activity
            android:name=".activities.FavoritesActivity"
            android:exported="false" />

        <!-- Cart Activity -->
        <activity
            android:name=".activities.CartActivity"
            android:exported="false" />

        <!-- Stores Activity -->
        <activity
            android:name=".activities.StoresActivity"
            android:exported="false" />

        <!-- Item Details Activity -->
        <activity
            android:name=".activities.ItemDetailsActivity"
            android:exported="false" />

        <!-- Menu Activity (old horizontal scroll - optional) -->
        <activity
            android:name=".activities.MenuActivity"
            android:exported="false" />

    </application>

</manifest>