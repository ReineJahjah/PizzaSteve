<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F0">

    <!-- Custom Action Bar -->
    <include
        android:id="@+id/customActionBar"
        layout="@layout/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Store Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/customActionBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Store Locations"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:letterSpacing="0.02"
                android:layout_marginBottom="20dp" />

            <!-- Map Placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/ivMapPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/store"
                    android:contentDescription="Map Placeholder"
                    android:background="#EEEEEE" />
            </androidx.cardview.widget.CardView>

            <!-- Store Information -->
            <TextView
                android:id="@+id/tvStoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:background="@drawable/store_info_bg"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:background="#FFFFFF"
        app:itemIconTint="#D32F2F"
        app:itemTextColor="#D32F2F" />
</androidx.constraintlayout.widget.ConstraintLayout>
