<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E53935"
    android:padding="16dp"
    android:elevation="6dp">

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ• Pizza Steve"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        />

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:radius="12dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for pizzas, drinks..."
            android:padding="14dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:background="@android:color/transparent"
            android:textColor="#212121"
            android:inputType="text" />

    </androidx.cardview.widget.CardView>

    <!-- Category Buttons (removed Home button) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnPizza"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸ• Pizza"
            android:textSize="14sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#E53935"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnDrinks"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸ¥¤ Drinks"
            android:textSize="14sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#E53935"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnStarters"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸŸStarters"
            android:textSize="14sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#E53935"
            android:elevation="2dp"/>

    </LinearLayout>

</LinearLayout>