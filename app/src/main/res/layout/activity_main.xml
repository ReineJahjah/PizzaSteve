<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ• Pizza Steve ðŸ•"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvMenuCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First, seed the database with sample menu items"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSeedDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŒ± Seed Database"
        android:padding="16dp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnLoadMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Load Menu"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnOpenMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Full Menu"
        android:padding="16dp"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:padding="16dp"
        android:backgroundTint="#F44336"/>

</LinearLayout>